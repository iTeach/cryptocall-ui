<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/base_manual_connection_send_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Select email!" />

            <EditText
                android:id="@+id/base_manual_connection_send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/base_manual_connection_send_email_button"
                android:hint="CryptoCall Email"
                android:inputType="textEmailAddress"
                android:paddingTop="8dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/base_manual_connection_send_button"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:text="Sending..." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/base_manual_connection_receive_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Select email!" />

            <EditText
                android:id="@+id/base_manual_connection_receive_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/base_manual_connection_receive_email_button"
                android:hint="CryptoCall Email"
                android:inputType="textEmailAddress"
                android:paddingTop="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp" >

            <EditText
                android:id="@+id/base_manual_connection_port"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="Port"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/base_manual_connection_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/base_manual_connection_port"
                android:hint="IP Address"
                android:inputType="numberDecimal" />
        </RelativeLayout>

        <Button
            android:id="@+id/base_manual_connection_received_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Received..." />
    </LinearLayout>

</ScrollView>