<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/wizard_success_intro"
        android:textSize="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/wizard_telephone_number" />

    <TextView
        android:id="@+id/wizard_success_telephone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/wizard_protected_email" />

    <TextView
        android:id="@+id/wizard_success_protected_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

</LinearLayout>